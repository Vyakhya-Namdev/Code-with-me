class Solution {
    public int maxSubarraySum(int[] arr, int k) {
        // Code here
        int curSum = 0;
        int maxSum = 0;
        int n = arr.length;
        int left =0, right = k;

        for(int i=left; i<=k-1; i++){
            curSum += arr[i];
            maxSum = Math.max(maxSum, curSum);
        }
        
        while(left < n-k){
            curSum = curSum - arr[left] + arr[right];
            maxSum = Math.max(maxSum, curSum);
            left++;
            right++;
        }
        
        return maxSum;
    }
}
