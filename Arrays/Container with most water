class Solution {
    public int maxWater(int arr[]) {

        int n = arr.length;
        int maxArea = 0;
        int left = 0;
        int right = n-1;
        
        while(left < right){
            int width = right - left;
            int length = (arr[left] > arr[right]) ? arr[right] : arr[left];
            int area = width * length;
            maxArea = Math.max(maxArea, area);
            
            if(arr[left] < arr[right]){
                left++;
            }else{
                right--;
            }
        }
        
        return maxArea;
    }
}
