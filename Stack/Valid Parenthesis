class Solution {
    public boolean isBalanced(String s) {
        char cha = s.charAt(0);
        if(cha == ')' || cha == ']' || cha == '}') return false;
        
        Stack<Character> stack = new Stack<>();
        
        for(int i=0; i<s.length(); i++){
            char ch = s.charAt(i);
            if(ch == '(' || ch == '[' || ch == '{'){
                stack.add(ch);
            }else{
                if(stack.isEmpty()) return false;
                
                char top = stack.peek();
                if((ch == ')' && top != '(') ||
                   (ch == ']' && top != '[') ||
                   (ch == '}' && top != '{')){
                       return false;
                   }else{
                       stack.pop();
                   }
            }
        }
        return stack.isEmpty();
    }
}
