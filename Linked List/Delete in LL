class Solution {
    Node deleteNode(Node head, int x) {
        // code here
        if(head == null){
            return null;
        }
        if(x == 1){
            head = head.next;
            return head;
        }
        
        Node temp = head;
        for(int i=1; i<x-1 && temp != null; i++){
            temp = temp.next;
        }
        
        if(temp!= null & temp.next != null){
            temp.next = temp.next.next;
        }
        return head;
    }
}
