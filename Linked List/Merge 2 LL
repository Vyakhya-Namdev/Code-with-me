class Solution {
    public ListNode mergeTwoLists(ListNode list1, ListNode list2) {
        ListNode head = new ListNode(-1);
        ListNode dummy = head;
        ListNode cur1 = list1;
        ListNode cur2 = list2;

        while(cur1 != null && cur2 != null){
            if(cur1.val <= cur2.val){
                dummy.next = cur1;
                dummy = dummy.next;
                cur1 = cur1.next;
            }else{
                dummy.next = cur2;
                dummy = dummy.next;
                cur2 = cur2.next;
            }
        }

        while(cur1 != null){
            dummy.next = cur1;
            cur1 = cur1.next;
            dummy = dummy.next;
        }

        while(cur2 != null){
            dummy.next = cur2;
            cur2 = cur2.next;
            dummy = dummy.next;
        }

        return head.next;
    }
}
